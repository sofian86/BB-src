            @Html.ValidationMessageFor(model => model.Club.Address)
        </div>
        </div>

        <div class="row">
        <div class="editor-label">
            @Html.LabelFor(model => model.Club.Area)
        </div>
        <div class="editor-field col-xs-6">
            @Html.TextBoxFor(model => model.Club.Area, new { @class = "form-control" })
