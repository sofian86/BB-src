        </div>
        <div class="editor-field col-xs-6">
            @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Country)
        </div>
        </div>
        <div class="padtop10">
        <p>
            <input class="btn btn-primary" type="submit" value="Create" />
        </p>
        </div>
    </fieldset>
}
</div>
</div>
