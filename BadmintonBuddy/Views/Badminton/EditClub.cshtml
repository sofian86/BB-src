        </div>
        </div>

        <div class="row">
        <div class="editor-label">
            @Html.LabelFor(model => model.Club.ContactNo)
        </div>
        <div class="editor-field col-xs-6">
            @Html.TextBoxFor(model => model.Club.ContactNo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Club.ContactNo)
        </div>
        </div>

        <div class="row">
        <div class="editor-label">
            @Html.LabelFor(model => model.Club.SurfaceID)
        </div>
        <div class="editor-field col-xs-6">
            @Html.EditorFor(model => model.Club.SurfaceID)
            @Html.ValidationMessageFor(model => model.Club.SurfaceID)
        </div>
        </div>

        <div class="row">
        <div class="editor-label">
            @Html.LabelFor(model => model.Club.Timings)
        </div>
        <div class="editor-field col-xs-6">
