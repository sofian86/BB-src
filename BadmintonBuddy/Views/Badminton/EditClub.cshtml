            @Html.LabelFor(model => model.Club.Website)
        </div>
        <div class="editor-field col-xs-6">
            @Html.TextBoxFor(model => model.Club.Website, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Club.Website)
        </div>
        </div>

        <div class="row">
        <div class="editor-label">
            @Html.LabelFor(model => model.Club.NoOfCourts)
        </div>
        <div class="editor-field col-xs-6">
            @Html.EditorFor(model => model.Club.NoOfCourts)
            @Html.ValidationMessageFor(model => model.Club.NoOfCourts)
        </div>       
