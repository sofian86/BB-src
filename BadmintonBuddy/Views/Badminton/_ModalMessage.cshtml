<div class="modal fade" id="inCorrectData" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &#215;</button>
                <h3>
                    Incorrect details</h3>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("AddMessage", "Badminton"))
                {
                    <div class="form-group">
                        <label for="errorinfo">
                            Information</label>
                        <textarea class="form-control" id="errorinfo" rows="3" placeholder="Add the details for this court like correct phone number, address change etc.."></textarea>
                    </div>                    
                
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" id="messageSubmit" data-dismiss="modal">Submit</button>
                        <button type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {        
        $("#messageSubmit").click(function () {
            var message = { MessageType: "IncorrectInfo", Message1:$("#errorinfo").val()};
            $.ajax({
                type: "POST",                
                url: "@Url.Action("AddMessage")",
                dataType: "json",
                data: message,
                processData: true,
//                success: function (data) {
//                    alert("im back");
//                    alert(data);
//                },
//                error: function (xhr, ajaxOptions, error) {
//                    alert(xhr.status);
//                    alert("Error: " + xhr.responseText);
//                }
            });

            $('#messageSubmit').html("Saved");
            $("#messageSubmit").attr("disabled", true);
        });
    });
</script>
