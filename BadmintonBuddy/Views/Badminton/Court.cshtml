@model BadmintonBuddy.Models.Club
@{
    ViewBag.Title = @ViewBag.Title;
    ViewBag.MetaDescription = @ViewBag.MetaDescription;
    ViewBag.MetaKeywords = @ViewBag.MetaKeywords;
}
<div class="container">
    @*@Html.Partial("_ModalDialog")
    @Html.Partial("_ModalMessage")*@
    <!--Main content row-->
    <div class="row panel">
        <ol class="breadcrumb-custom">
            <li itemprop="breadcrumb"><a href="#">Home</a></li>
            <li itemprop="breadcrumb"><a href="/courts">Courts</a></li>
            <li itemprop="breadcrumb"><a href="/search?q=@Model.City.CityName">@Model.City.CityName</a></li>
            <li itemprop="breadcrumb"><a href="/search?q=@Model.Area">@Model.Area</a></li>
            <li itemprop="breadcrumb" class="active">@Model.ClubName</li>
        </ol>
        <div itemscope itemtype="http://schema.org/SportsClub" class="col-xs-12 page-min-height">
            <h3 itemprop="name">@Model.ClubName</h3>
            <div class="row">
                <div class="col-xs-7">
                    <!--Left Main Column-->
                    <div class="row">
                        <!--Address-->
                        <div class="col-xs-3">
                            Address
                        </div>
                        <div itemprop="address" itemscope itemtype="http://schema.org/PostalAddress" class="col-xs-8 col-sm-offset-1">
                            <span itemprop="streetAddress">
                                <p>@Model.Address</p>
                                <p itemprop="addressRegion">@Model.Area</p>
                            </span>
                            <p itemprop="addressLocality">@Model.City.CityName.ToString().ToUpper()</p>
                        </div>
                    </div>
                    <!--Address-->
                    <div class="row">
                        <!--Phone-->
                        <div class="col-xs-3">
                            Phone
                        </div>
                        <div class="col-xs-8 col-sm-offset-1">
                            <p itemprop="telephone">@Model.ContactNo</p>
                        </div>
                    </div>
                    <!--Phone-->
                    <div class="row">
                        <!--Timings-->
                        <div class="col-xs-3">
                            Timings
                        </div>
                        <div class="col-xs-8 col-sm-offset-1">
                            <p>@Model.Timings</p>
                        </div>
                    </div>
                    <!--Timings-->
                    <div class="row">
                        <!--Timings-->
                        <div class="col-xs-3">
                            No Of Courts
                        </div>
                        <div class="col-xs-8 col-sm-offset-1">
                            <p>@Model.NoOfCourts</p>
                        </div>
                    </div>
                    <!--Timings-->
                    <div class="row">
                        <!--Surface-->
                        <div class="col-sm-3 col-xs-3">
                            Surface
                        </div>
                        <div class="col-sm-8 col-xs-8 col-sm-offset-1">
                            <p>@Model.Surface.SurfaceType</p>
                        </div>
                    </div>
                    <!--Surface-->
                    <div class="row">
                        <!--Fees-->
                        <div class="col-xs-3">
                            Fees
                        </div>
                        <div class="col-xs-8 col-sm-offset-1">
                            <p>@Model.Fees</p>
                        </div>
                    </div>
                    <!--Fees-->
                    <div class="row">
                        <!--Website-->
                        <div class="col-xs-3">
                            Website
                        </div>
                        <div class="col-xs-8 col-sm-offset-1">
                            <a href="@Model.Website" target="_blank">@Model.Website</a>
                        </div>
                    </div>
                    <!--Website-->
                    <!--Images-->
                    @if (@ViewBag.ImageURL0 != null)
                    {
                        <div class="row padtop10">
                            <div class="col-xs-12">
                                <p>
                                    Images</p>
                            </div>
                            @if (@ViewBag.ImageURL0 != null)
                            {
                                <div class="col-md-4">
                                    <img itemprop="image" class="img-responsive" src="@ViewBag.ImageURL0" /></div>
                            }
                            @if (@ViewBag.ImageURL1 != null)
                            {
                                <div class="col-md-4">
                                    <img itemprop="image" class="img-responsive" src="@ViewBag.ImageURL1" /></div>
                            }
                            @if (@ViewBag.ImageURL2 != null)
                            {
                                <div class="col-md-4">
                                    <img itemprop="image" class="img-responsive" src="@ViewBag.ImageURL2" /></div>                       
                            }
                        </div>
                    }
                    <!--Images-->
                    <div class="col-xs-12">
                        <a href="/search?q=@Model.City.CityName" class="pull-right">
                            <h4>
                                Other courts in @Model.City.CityName</h4>
                        </a>
                    </div>
                </div>
                <!--Left Main Column-->
                <!-- Main Column 2 -->
                <div class="col-md-5">
                    <div class="row">
                        @if (ViewBag.MapURL != "")
                        {
                            <div class="col-xs-12">
                                <!--Use Static images from the API instead of iFrame-->
                                <iframe width="350" height="300" frameborder="0" scrolling="no"
              marginheight="0" marginwidth="0" src=
              "@Server.HtmlDecode(ViewBag.MapURL)&output=embed"></iframe>
                                <br />
                                <small><a href="@Server.HtmlDecode(ViewBag.MapURL)"
              style="color:#0000FF;text-align:left">View Larger Map</a></small>
                            </div>
                        }
                    </div>
                    <div class="row padtop10">
                        <!-- Button for report error -->
                        <div class="col-xs-10">
                            @*<button type="button" class="btn btn-primary btn-block" data-toggle="modal"
                                data-target="#newCourtInfo">
                                New Court Information</button>
                            <button type="button" class="btn btn-danger btn-block" data-toggle="modal"
                                data-target="#inCorrectData">
                                Report problem with the court details</button>*@ <a class="btn btn-primary btn-block" href="/FindPartner?court=@Model.ClubName">
                                    Looking for partner to play here?</a>
                        </div>
                        <div class="col-xs-10">
                            @{
                                Html.RenderAction("NearbyCourt", "Badminton", new { courtIds = @Model.NearbyClub });
                            }
                        </div>
                    </div>
                    <!-- Button for report error -->
                </div>
                <!-- Main Column 2 -->
            </div>
        </div>
    </div>
    <!--Main content row-->
</div>
